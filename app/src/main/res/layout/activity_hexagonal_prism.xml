<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".bangunRuang.HexagonalPrism">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@drawable/background_ruang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textRectangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRISMA SEGIENAM"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:fontFamily="@font/super_positive"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textRumus"
        app:layout_constraintTop_toBottomOf="@id/textRectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="V = (3âˆš3)/2 * s * s * t"
        android:fontFamily="@font/popping_cute"
        android:textColor="@color/black"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/hexagonal_prism_sisi_alas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hexagonal_prism_tinggi"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:hint="Masukkan sisi alas"
        android:textColor="@color/white"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="@color/white"/>

    <EditText
        android:id="@+id/hexagonal_prism_tinggi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hexagonal_prism_sisi_alas"
        app:layout_constraintTop_toBottomOf="@id/top_view"
        android:layout_margin="50dp"
        android:background="@drawable/border"
        android:hint="Masukkan tinggi"
        android:textColor="@color/white"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="@color/white"/>

    <TextView
        android:id="@+id/hexagonal_prism_hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hexagonal_prism_sisi_alas"
        android:text="Hasil"
        android:background="@drawable/border"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:padding="10dp"
        android:textSize="18dp"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/hexagonal_prism_calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/hexagonal_prism_hasil"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:backgroundTint="#40C057"
        android:fontFamily="@font/super_positive"
        android:text="Calculate"
        android:textSize="20dp"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>
